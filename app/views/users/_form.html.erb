    <%= f.select(:gender, [['', 0], ['Male', 1], ['Female', 2], ['Trans Woman', 3], ['Trans Man', 4], ['Exotic', 5]]) %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :salt %><br>
    <%= f.text_field :salt %>
  </div>
  <div class="field">
    <%= f.label :access_pass %><br>
    <%= f.text_field :access_pass %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
